#1. Pyramid print("\nNormal Pyramid")

for i in range(5): X=1* x=x*i print(f'(x: ^10}')

#2. Invert Pyramid print("\nInvert Pyramid\n")

for i in range(5): x=' x=x*(5-1) print(f'(x: ^10}')

#3. Left sided Pyramid print("\nLeft sided Pyramid")

for i in range(5): x=' x=x*i print(f'(x: <10}')

#4. Right sided Pyramid print("\nRight sided Pyramid") for i in range(5): x= x=x*i print(f'(x: >10}')
